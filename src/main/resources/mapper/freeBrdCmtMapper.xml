<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.bodiary.freeBrd.dao.FreeBrdCmtDao">

	
	 <!-- 댓글목록 -->
	 <select id="replyList" resultType="kr.or.bodiary.freeBrd.dto.FreeBrdCmtDto">
		 	select * from FreeBoardComment c,freeboard m
			where c.user_email = m.user_email AND m.free_brd_seq = #{seq}
			order by c.brd_cmt_seq desc;
	 </select>
   
   
   	 <!--댓글 입력 (파라미터 타입이 하나면 안써줘도 알아서 인식됨)-->
   	 <insert id="create">
   	 	insert into FreeBoardComment(free_brd_seq,free_cat,user_email,brd_cmt,brd_cmt_date,brd_cmt_ref,brd_cmt_depth,brd_cmt_step)
		values(#{free_brd_seq},1,"bit155@naver.com",#{brd_cmt},now(),0,0,0);
   	 </insert>
</mapper>

































